    // markdown snippets
    "insert a hidden content": {
        "prefix": "hidden",
        "body": [
            "<details>",
            "<summary>点击查看答案</summary>",
            "content",
            "</details><br>",
        ],
        "description": "insert a blank line"
    },
    "insert a blank line": {
        "prefix": "bl",
        "body": [
            "&nbsp;"
        ],
        "description": "insert a blank line"
    },
    "insert a image": {
        "prefix": "image",
        "body": [
            "| ![alt]() |",
            "|:--:|",
            "| *caption* |",
        ],
        "description": "insert a image"
    },
    "insert equation SwitchCases": {
        "prefix": "eqnarray",
        "body": [
            "\\[",
            " function \\left \\{",
            "  \\begin{array}{ll}",
            "      a & \\textrm{case} \\\\\\",
            "      b & \\textrm{case} \\\\\\",
            "  \\end{array} \\right.",
            "\\]",
        ],
        "description": "insert a blank line"
    },
    "anchor2": {
        "prefix": "anchor2",
        "body": [
            "[点击跳转](#pookie)",
            "<a name=\"锚点\"></a>",
        ],
        "description": "insert a blank line"
    },
    "anchor": {
        "prefix": "anchor",
        "body": [
            "<span id=\"jump\">跳转到的地方</span>",
            "[点击跳转](#jump)",
        ],
        "description": "insert a blank line"
    },
    "anchorheading": {
        "prefix": "anchor for heading",
        "body": [
            "[create an anchor](#anchors-in-markdown)",
        ],
        "description": "insert a blank line"
    },
    "gantt": {
        "prefix": "gantt",
        "body": [
            "```mermaid",
            "gantt",
            "    title A Gantt Diagram",
            "    dateFormat  YYYY-MM-DD",
            "    section Section",
            "    A task: a1, 2014-01-01, 30d",
            "    Another task: after a1  , 20d",
            "    section Another",
            "    Task in sec: 2014-01-12  , 12d",
            "    another task: 24d",
            "```",
        ],
        "description": "create a gantt graph"
    },
    "sequence": {
        "prefix": "sequence",
        "body": [
            "```mermaid",
            "    sequenceDiagram",
            "    Alice->>+John: Hello John, how are you?",
            "    Alice->>+John: John, can you hear me?",
            "    John-->>-Alice: Hi Alice, I can hear you!",
            "    John-->>-Alice: I feel great!",
            "```",
        ],
        "description": "create a sequence diagram"
    },
    "graph": {
        "prefix": "graph",
        "body": [
            "```mermaid{align=\"center\"}",
            "graph TB",
            "",
            "A((A))",
            "B((B))",
            "C((C))",
            "",
            "A-->B",
            "A-->C",
            "```",
        ],
        "description": "create a graph(vertices, edges)"
    }
