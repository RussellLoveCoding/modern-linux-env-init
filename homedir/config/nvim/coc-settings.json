{
    // python
    "python.pythonPath":"/home/hin/.pyenv/shims/python",
    "explorer.icon.enableNerdfont":true,
    "explorer.icon.source":"nvim-web-devicons",
    "java.home":"~/opt/jdk-17.0.3.1",
    "coc.preferences.currentFunctionSymbolAutoUpdate": true,
    "explorer.root.customRules": {
        "vcs": {
            "patterns": [".git", ".hg", ".projections.json"]
        },
        "vcs-r": {
            "patterns": [".git", ".hg", ".projections.json"],
            "bottomUp": true
        }
    },
    "explorer.width":25,
    "coc.preferences.jumpCommand": "drop",
    "outline.showLineNumber": true,
    "diagnostic.enableHighlightLineNumber": false,
    "languageserver": {
        "clangd": {
            "command": "clangd",
            "rootPatterns": [
                "compile_flags.txt",
                "compile_commands.json"
            ],
            "filetypes": [
                "c",
                "cc",
                "cpp",
                "c++",
                "objc",
                "objcpp"
            ]
        },
        "dockerfile": {
            "command": "docker-langserver",
            "filetypes": [
                "dockerfile"
            ],
            "args": [
                "--stdio"
            ]
        },
        "bash": {
            "command": "bash-language-server",
            "args": [
                "start"
            ],
            "filetypes": [
                "sh"
            ]
        },
        "golang": {
            "command": "gopls",
            "rootPatterns": [
                "go.mod"
            ],
            "filetypes": [
                "go"
            ]
        },
        "intelephense": {
            "command": "intelephense",
            "args": [
                "--stdio"
            ],
            "filetypes": [
                "php"
            ],
            "initializationOptions": {
                "storagePath": "/tmp/intelephense"
            }
        }
